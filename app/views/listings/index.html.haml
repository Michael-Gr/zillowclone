.jumbotron{:style => "background-image: url(http://newyorkpanorama.com/blog/wp-content/uploads/2008/02/2008-02-W38-Street-w1800.jpg); background-size: 100%;"}
  %h1{:style => "color:rgb(255,255,255);"}  Find your way home
  %ul.nav.nav-tabs
    %li.active
      %a{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#buy-home-tab"} Buy
    %li
      %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#buy-home-tab"} Rent
    %li
      %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#buy-home-tab"} Sell
    %li
      %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#buy-home-tab"} Zestimate

  .tab-content
    #buy-home-tab.tab-pane.active{role: "tabpanel"}
      %form
        .form-group
          %input.form-control{:placeholder => "Enter an address, neighborhood, city or ZIP code", :type => "text"}/
          %button.btn.btn-primary{:type => "submit"} Search

.page-header
  %h1 Houses

.row
  - @listings.each do |listing|
    .col-sm-6.col-md-3
      .thumbnail
        - if listing.image_id
          = image_tag attachment_url(listing, :image), size: "484x400"
        .caption
          %h5
            %font{:size => "6"}= listing.price
            = listing.bedrooms
            •
            = listing.bathrooms
            •
            = listing.size
          %p
            = distance_of_time_in_words_to_now(listing.created_at)
            •
            = listing.address
          %p
            %a.btn.btn-primary{:href => "/listings/#{listing.id}", :role => "button"} View

